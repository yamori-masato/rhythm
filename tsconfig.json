    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*"
  ]
}
